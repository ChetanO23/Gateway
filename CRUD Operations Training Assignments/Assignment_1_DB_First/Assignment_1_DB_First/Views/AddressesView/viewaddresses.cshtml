@model IEnumerable<Assignment_1_DB_First.Models.AddressesViewModel>

@{
    ViewBag.Title = "viewaddresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User's Addresses Details</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USER_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USER_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADDRESS_TYPE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADDRESS_VALUE)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NAME)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ADDRESS_TYPE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ADDRESS_VALUE)
    </td>

    
</tr>
}

</table>
